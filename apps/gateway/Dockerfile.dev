# Development Dockerfile with hot reload
FROM golang:1.24-alpine

WORKDIR /app

# Install air for hot reload (pinned to version compatible with Go 1.24)
RUN go install github.com/air-verse/air@v1.61.0

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Expose port
EXPOSE 8080

# Run with air for hot reload
CMD ["air", "-c", ".air.toml"]
